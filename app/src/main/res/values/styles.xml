    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
